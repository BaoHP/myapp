<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-2xl shadow-lg w-96">
    <h2 class="text-2xl font-semibold text-center mb-6">Đăng nhập</h2>

    <%= form_with scope: :user, url: session_path(:user), local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, required: true, class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= f.label :password, "Mật khẩu", class: "block font-medium mb-1" %>
        <%= f.password_field :password, required: true, class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300" %>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "Ghi nhớ đăng nhập" %>
        </div>
        <%= link_to "Quên mật khẩu?", new_password_path(:user), class: "text-blue-500 hover:underline text-sm" %>
      </div>

      <div>
        <%= f.submit "Đăng nhập", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition" %>
      </div>
    <% end %>

    <p class="text-center text-sm mt-4">
      Chưa có tài khoản?
      <%= link_to "Đăng ký ngay", new_registration_path(:user), class: "text-blue-500 hover:underline" %>
    </p>
  </div>
</div>
